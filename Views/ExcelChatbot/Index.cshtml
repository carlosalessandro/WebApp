@{
    ViewData["Title"] = "Chatbot Excel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light border-right">
            <div class="p-3">
                <h5 class="mb-3">
                    <i class="fas fa-robot me-2"></i>Chatbot Excel
                </h5>
                
                <button id="newSessionBtn" class="btn btn-primary w-100 mb-3">
                    <i class="fas fa-plus me-2"></i>Nova Sessão
                </button>

                <div id="sessionsList" class="list-group">
                    @if (ViewBag.Sessions != null)
                    {
                        @foreach (var session in ViewBag.Sessions)
                        {
                            <div class="list-group-item session-item" data-session-id="@session.SessionId">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Sessão @(session.Id)</h6>
                                    <small>@session.LastActivity.ToString("HH:mm")</small>
                                </div>
                                <p class="mb-1 text-truncate">
                                    @(string.IsNullOrEmpty(session.FileName) ? "Sem arquivo" : session.FileName)
                                </p>
                                <small>@session.CreatedAt.ToString("dd/MM")</small>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Main Chat Area -->
        <div class="col-md-9">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-comments me-2"></i>
                        <span id="currentSessionTitle">Selecione uma sessão</span>
                    </h5>
                    <div class="d-flex gap-2">
                        <button id="uploadExcelBtn" class="btn btn-outline-primary" disabled>
                            <i class="fas fa-file-excel me-2"></i>Upload Excel
                        </button>
                        <button id="deleteSessionBtn" class="btn btn-outline-danger" disabled>
                            <i class="fas fa-trash me-2"></i>Excluir
                        </button>
                    </div>
                </div>

                <div class="card-body d-flex flex-column" style="height: calc(100vh - 200px);">
                    <!-- Chat Messages -->
                    <div id="chatMessages" class="flex-grow-1 overflow-auto mb-3 p-3 bg-light rounded">
                        <div class="text-center text-muted">
                            <i class="fas fa-robot fa-3x mb-3"></i>
                            <p>Selecione uma sessão ou crie uma nova para começar</p>
                        </div>
                    </div>

                    <!-- Excel Preview -->
                    <div id="excelPreview" class="mb-3" style="display: none;">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="fas fa-file-excel me-2"></i>
                                    <span id="excelFileName">Arquivo Excel</span>
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="excelGrid" class="table-responsive">
                                    <!-- Excel data will be displayed here -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Message Input -->
                    <div class="input-group">
                        <input type="text" id="messageInput" class="form-control" 
                               placeholder="Digite sua mensagem..." disabled>
                        <button class="btn btn-primary" id="sendBtn" disabled>
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>

                    <!-- Quick Actions -->
                    <div id="quickActions" class="mt-3" style="display: none;">
                        <div class="d-flex flex-wrap gap-2">
                            <button class="btn btn-sm btn-outline-primary quick-action" data-action="sum">
                                <i class="fas fa-calculator me-1"></i>Somar
                            </button>
                            <button class="btn btn-sm btn-outline-primary quick-action" data-action="average">
                                <i class="fas fa-chart-line me-1"></i>Média
                            </button>
                            <button class="btn btn-sm btn-outline-primary quick-action" data-action="filter">
                                <i class="fas fa-filter me-1"></i>Filtrar
                            </button>
                            <button class="btn btn-sm btn-outline-primary quick-action" data-action="sort">
                                <i class="fas fa-sort me-1"></i>Ordenar
                            </button>
                            <button class="btn btn-sm btn-outline-primary quick-action" data-action="chart">
                                <i class="fas fa-chart-bar me-1"></i>Gráfico
                            </button>
                            <button class="btn btn-sm btn-outline-primary quick-action" data-action="export">
                                <i class="fas fa-download me-1"></i>Exportar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-file-excel me-2"></i>Upload Arquivo Excel
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="excelFile" class="form-label">Selecione o arquivo Excel</label>
                    <input type="file" class="form-control" id="excelFile" accept=".xls,.xlsx">
                    <div class="form-text">
                        Formatos aceitos: .xls, .xlsx (máximo 10MB)
                    </div>
                </div>
                <div id="uploadProgress" style="display: none;">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmUploadBtn">
                    <i class="fas fa-upload me-2"></i>Upload
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .session-item {
        cursor: pointer;
        transition: background-color 0.2s;
    }
    
    .session-item:hover {
        background-color: #f8f9fa;
    }
    
    .session-item.active {
        background-color: #007bff;
        color: white;
    }
    
    .message {
        margin-bottom: 15px;
        padding: 10px 15px;
        border-radius: 10px;
        max-width: 80%;
    }
    
    .message.user {
        background-color: #007bff;
        color: white;
        margin-left: auto;
        text-align: right;
    }
    
    .message.bot {
        background-color: #f8f9fa;
        color: #333;
        margin-right: auto;
    }
    
    .message.system {
        background-color: #ffc107;
        color: #333;
        margin: 0 auto;
        text-align: center;
        max-width: 60%;
    }
    
    .message.error {
        background-color: #dc3545;
        color: white;
        margin: 0 auto;
        text-align: center;
        max-width: 60%;
    }
    
    .typing-indicator {
        display: none;
        padding: 10px 15px;
        background-color: #f8f9fa;
        border-radius: 10px;
        margin-right: auto;
        max-width: 80px;
    }
    
    .typing-indicator span {
        display: inline-block;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: #666;
        margin: 0 2px;
        animation: typing 1.4s infinite;
    }
    
    .typing-indicator span:nth-child(2) {
        animation-delay: 0.2s;
    }
    
    .typing-indicator span:nth-child(3) {
        animation-delay: 0.4s;
    }
    
    @@keyframes typing {
        0%, 60%, 100% {
            transform: translateY(0);
        }
        30% {
            transform: translateY(-10px);
        }
    }
    
    .excel-grid {
        font-size: 0.9em;
        max-height: 400px;
        overflow: auto;
    }
    
    .excel-grid table {
        border-collapse: collapse;
        width: 100%;
    }
    
    .excel-grid th,
    .excel-grid td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
        white-space: nowrap;
    }
    
    .excel-grid th {
        background-color: #f8f9fa;
        font-weight: bold;
        position: sticky;
        top: 0;
        z-index: 10;
    }
    
    .excel-grid tr:hover {
        background-color: #f5f5f5;
    }
</style>

@section Scripts {
    <script>
        let currentSessionId = null;
        let uploadModal = null;

        $(document).ready(function() {
            uploadModal = new bootstrap.Modal(document.getElementById('uploadModal'));
            
            // Event handlers
            $('#newSessionBtn').click(createNewSession);
            $('#uploadExcelBtn').click(() => uploadModal.show());
            $('#confirmUploadBtn').click(uploadExcel);
            $('#deleteSessionBtn').click(deleteCurrentSession);
            $('#sendBtn').click(sendMessage);
            $('#messageInput').keypress(function(e) {
                if (e.which === 13) {
                    sendMessage();
                }
            });
            
            // Session selection
            $(document).on('click', '.session-item', function() {
                selectSession($(this).data('session-id'));
            });
            
            // Quick actions
            $('.quick-action').click(function() {
                const action = $(this).data('action');
                executeQuickAction(action);
            });
        });

        function createNewSession() {
            $.post('/ExcelChatbot/CreateSession')
                .done(function(response) {
                    if (response.success) {
                        selectSession(response.sessionId);
                        location.reload(); // Refresh to show new session
                    } else {
                        showAlert('Erro ao criar sessão', 'danger');
                    }
                })
                .fail(function() {
                    showAlert('Erro ao criar sessão', 'danger');
                });
        }

        function selectSession(sessionId) {
            currentSessionId = sessionId;
            
            // Update UI
            $('.session-item').removeClass('active');
            $(`.session-item[data-session-id="${sessionId}"]`).addClass('active');
            
            // Enable controls
            $('#uploadExcelBtn').prop('disabled', false);
            $('#deleteSessionBtn').prop('disabled', false);
            $('#messageInput').prop('disabled', false);
            $('#sendBtn').prop('disabled', false);
            $('#quickActions').show();
            
            // Load session data
            loadSessionData(sessionId);
        }

        function loadSessionData(sessionId) {
            $.get('/ExcelChatbot/GetSessionData', { sessionId: sessionId })
                .done(function(response) {
                    if (response.success) {
                        displaySessionInfo(response.session);
                        displayMessages(response.messages);
                        displayOperations(response.operations);
                    }
                })
                .fail(function() {
                    showAlert('Erro ao carregar dados da sessão', 'danger');
                });
        }

        function displaySessionInfo(session) {
            $('#currentSessionTitle').text(`Sessão ${session.id} - ${session.fileName || 'Sem arquivo'}`);
        }

        function displayMessages(messages) {
            const chatMessages = $('#chatMessages');
            chatMessages.empty();
            
            messages.forEach(function(message) {
                addMessageToChat(message.type, message.content, message.timestamp);
            });
            
            chatMessages.scrollTop(chatMessages[0].scrollHeight);
        }

        function displayOperations(operations) {
            // TODO: Display operations in a sidebar or modal
        }

        function addMessageToChat(type, content, timestamp) {
            const chatMessages = $('#chatMessages');
            const messageClass = type === 'user' ? 'user' : 'bot';
            
            const messageHtml = `
                <div class="message ${messageClass}">
                    <div class="small text-muted">${timestamp}</div>
                    <div>${content}</div>
                </div>
            `;
            
            chatMessages.append(messageHtml);
            chatMessages.scrollTop(chatMessages[0].scrollHeight);
        }

        function uploadExcel() {
            const fileInput = document.getElementById('excelFile');
            const file = fileInput.files[0];
            
            if (!file) {
                showAlert('Selecione um arquivo', 'warning');
                return;
            }
            
            const formData = new FormData();
            formData.append('file', file);
            formData.append('sessionId', currentSessionId);
            
            $('#uploadProgress').show();
            $('.progress-bar').css('width', '0%');
            
            $.ajax({
                url: '/ExcelChatbot/UploadExcel',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                xhr: function() {
                    const xhr = new window.XMLHttpRequest();
                    xhr.upload.addEventListener('progress', function(e) {
                        if (e.lengthComputable) {
                            const percent = (e.loaded / e.total) * 100;
                            $('.progress-bar').css('width', percent + '%');
                        }
                    });
                    return xhr;
                },
                success: function(response) {
                    $('#uploadProgress').hide();
                    uploadModal.hide();
                    fileInput.value = '';
                    
                    if (response.success) {
                        showAlert('Arquivo carregado com sucesso!', 'success');
                        loadSessionData(currentSessionId);
                        displayExcelPreview(response.fileInfo);
                    } else {
                        showAlert(response.message, 'danger');
                    }
                },
                error: function() {
                    $('#uploadProgress').hide();
                    showAlert('Erro ao fazer upload', 'danger');
                }
            });
        }

        function displayExcelPreview(fileInfo) {
            $('#excelFileName').text(fileInfo.fileName);
            $('#excelPreview').show();
            
            // TODO: Load and display Excel data in a grid
            $('#excelGrid').html('<p>Visualização do arquivo Excel será implementada...</p>');
        }

        function sendMessage() {
            const message = $('#messageInput').val().trim();
            if (!message || !currentSessionId) return;
            
            // Add user message immediately
            addMessageToChat('user', message, new Date().toLocaleTimeString());
            $('#messageInput').val('');
            
            // Show typing indicator
            showTypingIndicator();
            
            $.post('/ExcelChatbot/SendMessage', {
                sessionId: currentSessionId,
                message: message
            })
            .done(function(response) {
                hideTypingIndicator();
                if (response.success) {
                    addMessageToChat('bot', response.botMessage.content, response.botMessage.timestamp);
                } else {
                    addMessageToChat('error', response.message, new Date().toLocaleTimeString());
                }
            })
            .fail(function() {
                hideTypingIndicator();
                addMessageToChat('error', 'Erro ao enviar mensagem', new Date().toLocaleTimeString());
            });
        }

        function showTypingIndicator() {
            const typingHtml = `
                <div class="typing-indicator" id="typingIndicator">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            `;
            $('#chatMessages').append(typingHtml);
            $('#chatMessages').scrollTop($('#chatMessages')[0].scrollHeight);
        }

        function hideTypingIndicator() {
            $('#typingIndicator').remove();
        }

        function executeQuickAction(action) {
            const actionMessages = {
                'sum': 'Por favor, some os valores na coluna selecionada',
                'average': 'Calcule a média dos dados selecionados',
                'filter': 'Filtre os dados conforme o critério especificado',
                'sort': 'Ordene os dados em ordem crescente',
                'chart': 'Crie um gráfico com os dados selecionados',
                'export': 'Exporte os dados para o formato solicitado'
            };
            
            $('#messageInput').val(actionMessages[action]);
            sendMessage();
        }

        function deleteCurrentSession() {
            if (!currentSessionId) return;
            
            if (confirm('Tem certeza que deseja excluir esta sessão?')) {
                $.post('/ExcelChatbot/DeleteSession', { sessionId: currentSessionId })
                    .done(function(response) {
                        if (response.success) {
                            showAlert('Sessão excluída com sucesso', 'success');
                            location.reload();
                        } else {
                            showAlert(response.message, 'danger');
                        }
                    })
                    .fail(function() {
                        showAlert('Erro ao excluir sessão', 'danger');
                    });
            }
        }

        function showAlert(message, type) {
            // TODO: Implement alert system or use Bootstrap alerts
            console.log(`${type}: ${message}`);
        }
    </script>
}
