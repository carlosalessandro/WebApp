@model WebApp.Models.MenuItem

@{
    ViewData["Title"] = "Detalhes do Item do Menu";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-eye"></i> Detalhes do Item do Menu</h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Informações do Item</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Título:</label>
                                <div class="p-2 bg-light rounded">
                                    @if (!string.IsNullOrEmpty(Model.Icone))
                                    {
                                        <i class="@Model.Icone"></i>
                                    }
                                    @Html.DisplayFor(model => model.Titulo)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ícone:</label>
                                <div class="p-2 bg-light rounded">
                                    @Html.DisplayFor(model => model.Icone)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Controller:</label>
                                <div class="p-2 bg-light rounded">
                                    @Html.DisplayFor(model => model.Controller)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Action:</label>
                                <div class="p-2 bg-light rounded">
                                    @Html.DisplayFor(model => model.Action)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">URL:</label>
                                <div class="p-2 bg-light rounded">
                                    @if (!string.IsNullOrEmpty(Model.Url))
                                    {
                                        <a href="@Model.Url" target="@(Model.AbrirNovaAba ? "_blank" : null)" class="text-decoration-none">
                                            @Html.DisplayFor(model => model.Url)
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não definida</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Área:</label>
                                <div class="p-2 bg-light rounded">
                                    @Html.DisplayFor(model => model.Area)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ordem:</label>
                                <div class="p-2 bg-light rounded">
                                    @Html.DisplayFor(model => model.Ordem)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status:</label>
                                <div class="p-2 bg-light rounded">
                                    @if (Model.Ativo)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Menu Pai:</label>
                                <div class="p-2 bg-light rounded">
                                    @if (Model.MenuPai != null)
                                    {
                                        @Html.DisplayFor(model => model.MenuPai!.Titulo)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Item principal</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">É Menu Pai:</label>
                                <div class="p-2 bg-light rounded">
                                    @if (Model.EMenuPai)
                                    {
                                        <span class="badge bg-primary">Sim</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Não</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Abrir em Nova Aba:</label>
                                <div class="p-2 bg-light rounded">
                                    @if (Model.AbrirNovaAba)
                                    {
                                        <span class="badge bg-info">Sim</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Não</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Data de Criação:</label>
                                <div class="p-2 bg-light rounded">
                                    @Html.DisplayFor(model => model.DataCriacao)
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Descricao))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Descrição:</label>
                            <div class="p-2 bg-light rounded">
                                @Html.DisplayFor(model => model.Descricao)
                            </div>
                        </div>
                    }

                    @if (Model.DataAtualizacao.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Última Atualização:</label>
                            <div class="p-2 bg-light rounded">
                                @Html.DisplayFor(model => model.DataAtualizacao)
                            </div>
                        </div>
                    }

                    @if (Model.SubMenus.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Submenus:</label>
                            <div class="p-2 bg-light rounded">
                                <ul class="list-unstyled mb-0">
                                    @foreach (var submenu in Model.SubMenus.OrderBy(s => s.Ordem))
                                    {
                                        <li>
                                            <i class="bi bi-arrow-right"></i>
                                            @if (!string.IsNullOrEmpty(submenu.Icone))
                                            {
                                                <i class="@submenu.Icone"></i>
                                            }
                                            @submenu.Titulo
                                            @if (!submenu.Ativo)
                                            {
                                                <span class="badge bg-secondary ms-1">Inativo</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
