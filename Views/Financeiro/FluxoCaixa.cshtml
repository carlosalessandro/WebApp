@model IEnumerable<WebApp.Models.MovimentacaoFinanceira>
@{
    ViewData["Title"] = "Fluxo de Caixa";
    DateTime? dataInicio = ViewBag.DataInicio;
    DateTime? dataFim = ViewBag.DataFim;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-cash-stack me-2"></i>Fluxo de Caixa</h2>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-filter-circle me-2"></i>Período</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="FluxoCaixa" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Data Início</label>
                    <input type="date" name="dataInicio" class="form-control" value="@(dataInicio?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Data Fim</label>
                    <input type="date" name="dataFim" class="form-control" value="@(dataFim?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-2"></i>Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Movimentações</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                var totalEntradas = Model.Where(m => m.Tipo == WebApp.Models.TipoMovimentacao.Entrada).Sum(m => m.Valor);
                var totalSaidas = Model.Where(m => m.Tipo == WebApp.Models.TipoMovimentacao.Saida).Sum(m => m.Valor);
                var resultado = totalEntradas - totalSaidas;

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="alert alert-success mb-0">
                            <strong>Entradas:</strong> @totalEntradas.ToString("C")
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert alert-danger mb-0">
                            <strong>Saídas:</strong> @totalSaidas.ToString("C")
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="alert @(resultado >= 0 ? "alert-success" : "alert-danger") mb-0">
                            <strong>Resultado:</strong> @resultado.ToString("C")
                        </div>
                    </div>
                </div>

                <div class="table-responsive mt-3">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Data</th>
                                <th>Descrição</th>
                                <th>Conta</th>
                                <th>Categoria</th>
                                <th class="text-end">Valor</th>
                                <th>Tipo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mov in Model.OrderBy(m => m.DataMovimentacao))
                            {
                                var valorClass = mov.Tipo == WebApp.Models.TipoMovimentacao.Entrada ? "text-success" : "text-danger";
                                <tr>
                                    <td>@mov.DataMovimentacao.ToString("dd/MM/yyyy")</td>
                                    <td>@mov.Descricao</td>
                                    <td>@mov.ContaBancaria?.Nome</td>
                                    <td>@mov.CategoriaFinanceira?.Nome</td>
                                    <td class="text-end @valorClass">@mov.Valor.ToString("C")</td>
                                    <td>
                                        @switch (mov.Tipo)
                                        {
                                            case WebApp.Models.TipoMovimentacao.Entrada:
                                                <span class="badge bg-success">Entrada</span>
                                                break;
                                            case WebApp.Models.TipoMovimentacao.Saida:
                                                <span class="badge bg-danger">Saída</span>
                                                break;
                                            case WebApp.Models.TipoMovimentacao.Transferencia:
                                                <span class="badge bg-secondary">Transferência</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <h4 class="text-muted mt-3">Nenhuma movimentação encontrada no período</h4>
                </div>
            }
        </div>
    </div>
</div>
