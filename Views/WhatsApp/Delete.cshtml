@model WebApp.Models.WhatsAppIntegracao

@{
    ViewData["Title"] = "Excluir Configuração";
}

<div class="container-fluid">
    <h1 class="mt-4">Excluir Configuração</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Integração WhatsApp</a></li>
        <li class="breadcrumb-item active">Excluir</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-trash me-1"></i>
            Confirmar Exclusão
        </div>
        <div class="card-body">
            <h3 class="text-danger">Tem certeza que deseja excluir esta configuração?</h3>
            <div class="mt-3">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NumeroTelefone)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.NumeroTelefone)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BusinessAccountId)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.BusinessAccountId)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ativo)</dt>
                    <dd class="col-sm-9">
                        @if (Model.Ativo)
                        {
                            <span class="badge bg-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inativo</span>
                        }
                    </dd>
                </dl>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>