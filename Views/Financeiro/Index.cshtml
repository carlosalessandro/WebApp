@{
    ViewData["Title"] = "Dashboard Financeiro";
    var dashboard = ViewBag.Dashboard;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-currency-dollar me-2"></i>Dashboard Financeiro</h2>
                <div>
                    <button class="btn btn-outline-primary" onclick="atualizarDados()">
                        <i class="bi bi-arrow-clockwise"></i> Atualizar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle text-danger fs-1"></i>
                    <h4 class="card-title text-danger">@(dashboard?.ContasPagarVencidas ?? 0)</h4>
                    <p class="card-text">Contas a Pagar Vencidas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-clock text-warning fs-1"></i>
                    <h4 class="card-title text-warning">@(dashboard?.ContasReceberVencidas ?? 0)</h4>
                    <p class="card-text">Contas a Receber Vencidas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="bi bi-credit-card text-info fs-1"></i>
                    <h4 class="card-title text-info">@((dashboard?.TotalPagarMes ?? 0).ToString("C"))</h4>
                    <p class="card-text">A Pagar Este Mês</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-cash-coin text-success fs-1"></i>
                    <h4 class="card-title text-success">@((dashboard?.TotalReceberMes ?? 0).ToString("C"))</h4>
                    <p class="card-text">A Receber Este Mês</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Saldo das Contas -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-bank me-2"></i>Saldo Total das Contas</h5>
                </div>
                <div class="card-body text-center">
                    <h3 class="@((dashboard?.SaldoContas ?? 0) >= 0 ? "text-success" : "text-danger")">
                        @((dashboard?.SaldoContas ?? 0).ToString("C"))
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-graph-up me-2"></i>Resultado do Mês</h5>
                </div>
                <div class="card-body text-center">
                    @{
                        var resultado = (dashboard?.TotalReceberMes ?? 0) - (dashboard?.TotalPagarMes ?? 0);
                    }
                    <h3 class="@(resultado >= 0 ? "text-success" : "text-danger")">
                        @resultado.ToString("C")
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Ações Rápidas -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning me-2"></i>Ações Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("CriarContaPagar", "Financeiro")" class="btn btn-outline-danger w-100">
                                <i class="bi bi-plus-circle me-2"></i>Nova Conta a Pagar
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("CriarContaReceber", "Financeiro")" class="btn btn-outline-success w-100">
                                <i class="bi bi-plus-circle me-2"></i>Nova Conta a Receber
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("ContasPagar", "Financeiro")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-list me-2"></i>Ver Contas a Pagar
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("ContasReceber", "Financeiro")" class="btn btn-outline-info w-100">
                                <i class="bi bi-list me-2"></i>Ver Contas a Receber
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function atualizarDados() {
    location.reload();
}
</script>
