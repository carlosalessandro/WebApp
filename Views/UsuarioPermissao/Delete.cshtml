@model WebApp.Models.UsuarioPermissao
@{
    ViewData["Title"] = "Remover Permissão";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shield-x text-danger"></i> Remover Permissão</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Atenção!</strong> Você está prestes a remover uma permissão. Esta ação não pode ser desfeita.
    </div>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="bi bi-trash"></i> Confirmar Remoção
            </h5>
        </div>
        <div class="card-body">
            <p class="mb-3">Deseja realmente remover a seguinte permissão?</p>
            
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Usuário:</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-person"></i> @Model.Usuario?.Name
                        </dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-envelope"></i> @Model.Usuario?.Email
                        </dd>

                        <dt class="col-sm-4">Categoria:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.Permissao?.Categoria?.Nome</span>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Permissão:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Permissao?.Nome</strong>
                        </dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Concedida)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Concedida
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Negada
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">Data de Concessão:</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-calendar"></i> @Model.DataConcessao.ToString("dd/MM/yyyy HH:mm")
                        </dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Permissao?.Descricao))
            {
                <div class="mt-3">
                    <strong>Descrição da Permissão:</strong>
                    <p class="text-muted">@Model.Permissao.Descricao</p>
                </div>
            }
        </div>
        <div class="card-footer bg-transparent">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja remover esta permissão?')">
                        <i class="bi bi-trash"></i> Confirmar Remoção
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                        <i class="bi bi-eye"></i> Ver Detalhes
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
