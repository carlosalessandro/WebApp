@model IEnumerable<WebApp.Models.OrdemProducao>
@{
    ViewData["Title"] = "Apontamento de Produção";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-check-square"></i> Apontamento de Produção</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="tabelaApontamento">
                        <thead>
                            <tr>
                                <th>Número</th>
                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th>Produzido</th>
                                <th>Status</th>
                                <th>Prioridade</th>
                                <th>Progresso</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ordem in Model)
                            {
                                var progresso = ordem.Quantidade > 0 ? (ordem.QuantidadeProduzida * 100 / ordem.Quantidade) : 0;
                                var statusClass = ordem.Status switch
                                {
                                    "Concluída" => "success",
                                    "EmAndamento" => "warning",
                                    "Pausada" => "secondary",
                                    "Cancelada" => "danger",
                                    _ => "info"
                                };

                                <tr>
                                    <td><strong>@ordem.NumeroOrdem</strong></td>
                                    <td>@ordem.Produto?.Nome</td>
                                    <td class="text-center">@ordem.Quantidade</td>
                                    <td class="text-center">@ordem.QuantidadeProduzida</td>
                                    <td><span class="badge bg-@statusClass">@ordem.Status</span></td>
                                    <td class="text-center">
                                        @for (int i = 0; i < ordem.Prioridade; i++)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 20px; min-width: 100px;">
                                            <div class="progress-bar bg-@statusClass" role="progressbar"
                                                 style="width: @progresso%"
                                                 aria-valuenow="@progresso" aria-valuemin="0" aria-valuemax="100">
                                                @progresso%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-action="CreateApontamento" asp-route-id="@ordem.Id" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-check-square"></i> Apontar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Não há ordens planejadas ou em andamento para apontamento.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            if ($.fn.DataTable) {
                $('#tabelaApontamento').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                    },
                    order: [[0, 'desc']]
                });
            }
        });
    </script>
}
