                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="bi bi-check2-square"></i> 
                                                @story.TasksConcluidas/@story.TasksTotal tasks
                                            </small>
                                            <div class="progress mt-1" style="height: 4px;">
                                                <div class="progress-bar bg-warning" style="width: @story.ProgressoPercentual%"></div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Em Teste -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-info h-100">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-bug"></i> Em Teste
                            <span class="badge bg-light text-dark ms-2">
                                @Model.UserStories.Count(us => us.Status == WebApp.Models.StatusUserStory.EmTeste)
                            </span>
                        </h6>
                    </div>
                    <div class="card-body p-2 kanban-column" 
                         data-status="@((int)WebApp.Models.StatusUserStory.EmTeste)" 
                         ondrop="drop(event)" 
                         ondragover="allowDrop(event)">
                        @foreach (var story in Model.UserStories.Where(us => us.Status == WebApp.Models.StatusUserStory.EmTeste))
                        {
