@model WebApp.Models.Venda

@{
    ViewData["Title"] = "Comprovante de Venda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4><i class="fas fa-receipt"></i> Comprovante de Venda</h4>
                <div>
                    <button class="btn btn-light btn-sm" onclick="window.print()">
                        <i class="fas fa-print"></i> Imprimir
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-sm ml-2">
                        <i class="fas fa-arrow-left"></i> Voltar ao PDV
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="mb-3">Informações da Venda</h5>
                    <p><strong>Número da Venda:</strong> #@Model.Id</p>
                    <p><strong>Data/Hora:</strong> @Model.DataVenda.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Forma de Pagamento:</strong> @Model.FormaPagamento</p>
                    <p><strong>Atendente:</strong> @(Model.Usuario?.Name ?? "Não informado")</p>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-3">Informações do Cliente</h5>
                    @if (Model.Cliente != null)
                    {
                        <p><strong>Nome:</strong> @Model.Cliente.Nome</p>
                        <p><strong>CPF:</strong> @Model.Cliente.CPF</p>
                        <p><strong>Telefone:</strong> @Model.Cliente.Telefone</p>
                        <p><strong>Email:</strong> @Model.Cliente.Email</p>
                    }
                    else
                    {
                        <p>Cliente não informado</p>
                    }
                </div>
            </div>

            <h5 class="mb-3">Itens da Venda</h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th class="text-center">Quantidade</th>
                            <th class="text-right">Preço Unit.</th>
                            <th class="text-right">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Itens)
                        {
                            <tr>
                                <td>@item.Produto.Nome</td>
                                <td class="text-center">@item.Quantidade</td>
                                <td class="text-right">R$ @item.PrecoUnitario.ToString("F2")</td>
                                <td class="text-right">R$ @item.Subtotal.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right"><strong>Subtotal:</strong></td>
                            <td class="text-right">R$ @Model.ValorTotal.ToString("F2")</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-right"><strong>Desconto:</strong></td>
                            <td class="text-right">R$ @Model.Desconto.ToString("F2")</td>
                        </tr>
                        <tr>
                            <td colspan="3" class="text-right"><strong>Total:</strong></td>
                            <td class="text-right"><strong>R$ @Model.ValorFinal.ToString("F2")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <!-- Seção de NFC-e -->
            <div class="mt-4 border p-3 rounded">
                <h5>NFC-e</h5>
                @if (Model.PossuiNFCe)
                {
                    <div class="alert alert-success">
                        <p><strong>Status:</strong> @Model.StatusNFCe</p>
                        <p><strong>Número:</strong> @Model.NumeroNFCe</p>
                        <p><strong>Série:</strong> @Model.SerieNFCe</p>
                        <p><strong>Chave de Acesso:</strong> @Model.ChaveAcessoNFCe</p>
                        <p><strong>Data de Emissão:</strong> @(Model.DataEmissaoNFCe?.ToString("dd/MM/yyyy HH:mm") ?? "-")</p>
                        
                        @if (Model.StatusNFCe != "Cancelada")
                        {
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelarNFCeModal">
                                Cancelar NFC-e
                            </button>
                        }
                        
                        <a asp-action="DetalhesNFCe" asp-route-id="@Model.NFCeId" class="btn btn-info">Detalhes da NFC-e</a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <p>Esta venda não possui NFC-e emitida.</p>
                        <form asp-action="GerarNFCe" method="post">
                            <input type="hidden" name="vendaId" value="@Model.Id" />
                            <button type="submit" class="btn btn-success">Gerar NFC-e</button>
                        </form>
                    </div>
                }
            </div>

            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    <p class="mb-0">Obrigado pela preferência!</p>
                    <p class="text-muted">Este documento não possui valor fiscal</p>
                    <div class="mt-3">
                        <a asp-action="Index" class="btn btn-primary">Nova Venda</a>
                        <button onclick="window.print()" class="btn btn-secondary">Imprimir</button>
                        <a asp-action="ImportarNFCe" class="btn btn-warning">Importar NFC-e</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Cancelamento de NFC-e -->
@if (Model.PossuiNFCe && Model.StatusNFCe != "Cancelada")
{
    <div class="modal fade" id="cancelarNFCeModal" tabindex="-1" aria-labelledby="cancelarNFCeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelarNFCeModalLabel">Cancelar NFC-e</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="CancelarNFCe" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="nfceId" value="@Model.NFCeId" />
                        <div class="mb-3">
                            <label for="justificativa" class="form-label">Justificativa</label>
                            <textarea class="form-control" id="justificativa" name="justificativa" rows="3" required></textarea>
                            <div class="form-text">Informe o motivo do cancelamento da NFC-e.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-danger">Confirmar Cancelamento</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
         print {
            .btn, .navbar, footer {
                display: none !important;
            }
            
            .card {
                border: none !important;
            }
            
            .card-header {
                background-color: #fff !important;
                color: #000 !important;
            }
        }
    </style>
}