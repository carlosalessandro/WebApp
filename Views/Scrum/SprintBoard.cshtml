                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-calendar-check"></i> @story.DataConclusao.Value.ToString("dd/MM")
                                            </small>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
