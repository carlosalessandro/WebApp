@model IEnumerable<WebApp.Models.Permissao>

@{
    ViewData["Title"] = "Permissões";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shield-check"></i> Permissões</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nova Permissão
    </a>
</div>

<div class="row">
    @foreach (var categoria in Model.GroupBy(p => p.Categoria))
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-folder"></i> @categoria.Key.Nome
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-muted">@categoria.Key.Descricao</p>
                    <div class="list-group list-group-flush">
                        @foreach (var permissao in categoria.OrderBy(p => p.Ordem))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@permissao.Nome</h6>
                                    <small class="text-muted">@permissao.Descricao</small>
                                    @if (!string.IsNullOrEmpty(permissao.Codigo))
                                    {
                                        <br><small class="badge bg-secondary">@permissao.Codigo</small>
                                    }
                                </div>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@permissao.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@permissao.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@permissao.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-shield-x display-1 text-muted"></i>
        <h3 class="text-muted">Nenhuma permissão encontrada</h3>
        <p class="text-muted">Clique no botão "Nova Permissão" para começar.</p>
    </div>
}
