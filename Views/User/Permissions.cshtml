@{
    ViewData["Title"] = "Permissões do Usuário";
    var usuario = ViewBag.Usuario as WebApp.Models.User;
    var permissoesPorCategoria = ViewBag.PermissoesPorCategoria as IEnumerable<IGrouping<WebApp.Models.Categoria, WebApp.Models.UsuarioPermissao>>;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-shield-check"></i> Permissões de @usuario?.Name</h2>
            <p class="text-muted mb-0">@usuario?.Email</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="ManagePermissions" asp-route-id="@usuario?.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Gerenciar Permissões
            </a>
            <a asp-action="Details" asp-route-id="@usuario?.Id" class="btn btn-outline-info">
                <i class="bi bi-person"></i> Ver Detalhes
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    @if (permissoesPorCategoria != null && permissoesPorCategoria.Any())
    {
        <div class="row">
            @foreach (var categoria in permissoesPorCategoria)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-folder"></i> @categoria.Key?.Nome
                            </h5>
                            @if (!string.IsNullOrEmpty(categoria.Key?.Descricao))
                            {
                                <small class="opacity-75">@categoria.Key.Descricao</small>
                            }
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                @foreach (var usuarioPermissao in categoria.OrderBy(up => up.Permissao?.Ordem))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">
                                                <i class="bi bi-check-circle text-success"></i> @usuarioPermissao.Permissao?.Nome
                                            </div>
                                            @if (!string.IsNullOrEmpty(usuarioPermissao.Permissao?.Descricao))
                                            {
                                                <small class="text-muted">@usuarioPermissao.Permissao.Descricao</small>
                                            }
                                        </div>
                                        <div class="text-end">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar"></i> @usuarioPermissao.DataConcessao.ToString("dd/MM/yyyy")
                                            </small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> @categoria.Count() permissão(ões) concedida(s)
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-list-check"></i> Resumo das Permissões
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center">
                            <h3 class="text-primary">@permissoesPorCategoria.Sum(g => g.Count())</h3>
                            <p class="text-muted mb-0">Total de Permissões</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h3 class="text-info">@permissoesPorCategoria.Count()</h3>
                            <p class="text-muted mb-0">Categorias com Acesso</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h3 class="text-success">@permissoesPorCategoria.Count(g => g.Any())</h3>
                            <p class="text-muted mb-0">Módulos Ativos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Nenhuma permissão concedida!</strong>
            Este usuário não possui permissões no sistema.
            <a asp-action="ManagePermissions" asp-route-id="@usuario?.Id" class="alert-link">Clique aqui para conceder permissões</a>.
        </div>

        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-shield-x display-1 text-muted"></i>
                <h4 class="mt-3">Sem Permissões</h4>
                <p class="text-muted">Este usuário ainda não possui permissões no sistema.</p>
                <a asp-action="ManagePermissions" asp-route-id="@usuario?.Id" class="btn btn-primary">
                    <i class="bi bi-shield-plus"></i> Conceder Permissões
                </a>
            </div>
        </div>
    }
</div>
