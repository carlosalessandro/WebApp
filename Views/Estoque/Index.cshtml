@{
    ViewData["Title"] = "Dashboard de Estoque";
    var dashboard = ViewBag.Dashboard;
    var produtosEstoqueBaixo = ViewBag.ProdutosEstoqueBaixo as IEnumerable<WebApp.Models.Estoque>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-boxes me-2"></i>Dashboard de Estoque</h2>
                <div>
                    <a href="@Url.Action("Entrada")" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle me-2"></i>Entrada
                    </a>
                    <a href="@Url.Action("Saida")" class="btn btn-warning me-2">
                        <i class="bi bi-dash-circle me-2"></i>Saída
                    </a>
                    <button class="btn btn-outline-primary" onclick="atualizarDados()">
                        <i class="bi bi-arrow-clockwise"></i> Atualizar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-box text-primary fs-1"></i>
                    <h4 class="card-title text-primary">@(dashboard?.TotalProdutos ?? 0)</h4>
                    <p class="card-text">Total de Produtos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle text-warning fs-1"></i>
                    <h4 class="card-title text-warning">@(dashboard?.ProdutosEstoqueBaixo ?? 0)</h4>
                    <p class="card-text">Estoque Baixo</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <i class="bi bi-x-circle text-danger fs-1"></i>
                    <h4 class="card-title text-danger">@(dashboard?.ProdutosSemEstoque ?? 0)</h4>
                    <p class="card-text">Sem Estoque</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar text-success fs-1"></i>
                    <h4 class="card-title text-success">@((dashboard?.ValorTotalEstoque ?? 0).ToString("C"))</h4>
                    <p class="card-text">Valor Total</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Produtos com Estoque Baixo -->
    @if (produtosEstoqueBaixo != null && produtosEstoqueBaixo.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5><i class="bi bi-exclamation-triangle me-2"></i>Produtos com Estoque Baixo</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        <th>Quantidade Atual</th>
                                        <th>Quantidade Mínima</th>
                                        <th>Diferença</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var estoque in produtosEstoqueBaixo)
                                    {
                                        <tr>
                                            <td>@(estoque.Produto?.Nome ?? "N/A")</td>
                                            <td>
                                                <span class="badge bg-danger">
                                                    @estoque.QuantidadeAtual
                                                </span>
                                            </td>
                                            <td>@estoque.QuantidadeMinima</td>
                                            <td>@(estoque.QuantidadeAtual - estoque.QuantidadeMinima)</td>
                                            <td>
                                                <a href="@Url.Action("Entrada", new { produtoId = estoque.ProdutoId })" 
                                                   class="btn btn-sm btn-success">
                                                    <i class="bi bi-plus-circle me-1"></i>Entrada
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Ações Rápidas -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-lightning me-2"></i>Ações Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Consulta")" class="btn btn-outline-primary w-100">
                                <i class="bi bi-search me-2"></i>Consultar Estoque
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Entrada")" class="btn btn-outline-success w-100">
                                <i class="bi bi-plus-circle me-2"></i>Entrada de Produtos
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Saida")" class="btn btn-outline-warning w-100">
                                <i class="bi bi-dash-circle me-2"></i>Saída de Produtos
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Movimentacoes")" class="btn btn-outline-info w-100">
                                <i class="bi bi-arrow-repeat me-2"></i>Movimentações
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function atualizarDados() {
    location.reload();
}
</script>
