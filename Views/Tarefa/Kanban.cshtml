<style>
    .kanban-board .card-body {
        min-height: 400px;
        max-height: 600px;
        overflow-y: auto;
    }
    
    .tarefa-card {
        cursor: move;
        transition: all 0.3s ease;
    }
    
    .tarefa-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .tarefa-card.dragging {
        opacity: 0.5;
        transform: rotate(5deg);
    }
    
    .card-body.drag-over {
        background-color: rgba(0,123,255,0.1);
        border: 2px dashed #007bff;
    }
</style>

<script>
    let draggedElement = null;

    function allowDrop(ev) {
        ev.preventDefault();
        ev.currentTarget.classList.add('drag-over');
    }

    function drag(ev) {
        draggedElement = ev.target;
        ev.target.classList.add('dragging');
    }

    function drop(ev) {
        ev.preventDefault();
        ev.currentTarget.classList.remove('drag-over');
        
        if (draggedElement) {
            const tarefaId = draggedElement.getAttribute('data-tarefa-id');
            const novoStatus = parseInt(ev.currentTarget.getAttribute('data-status'));
            const statusAtual = parseInt(draggedElement.closest('[data-status]').getAttribute('data-status'));
            
            console.log('Drop event:', {
                tarefaId: tarefaId,
                novoStatus: novoStatus,
                statusAtual: statusAtual
            });
            
            if (!tarefaId) {
                console.error('ID da tarefa não encontrado');
                alert('Erro: ID da tarefa não encontrado');
                return;
            }
            
            if (isNaN(novoStatus)) {
                console.error('Status inválido:', ev.currentTarget.getAttribute('data-status'));
                alert('Erro: Status de destino inválido');
                return;
            }
            
            if (novoStatus !== statusAtual) {
                console.log('Atualizando tarefa de status', statusAtual, 'para', novoStatus);
                updateTarefaStatus(tarefaId, novoStatus);
            } else {
                console.log('Tarefa já está no status correto, não fazendo nada');
            }
            
            draggedElement.classList.remove('dragging');
            draggedElement = null;
        }
    }

    function updateTarefaStatus(tarefaId, novoStatus) {
        console.log('Atualizando tarefa:', tarefaId, 'para status:', novoStatus);
        
        fetch('/Tarefa/UpdateStatus', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                tarefaId: parseInt(tarefaId),
                novoStatus: novoStatus,
                novaOrdem: 0
            })
        })
        .then(response => {
            console.log('Response status:', response.status);
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log('Response data:', data);
            if (data.success) {
                // Recarregar a página para mostrar as mudanças
                location.reload();
            } else {
                console.error('Erro do servidor:', data.message);
                alert('Erro ao atualizar tarefa: ' + (data.message || 'Erro desconhecido'));
            }
        })
        .catch(error => {
            console.error('Erro na requisição:', error);
            alert('Erro ao atualizar tarefa: ' + error.message);
        });
    }

    // Função para testar o endpoint
    function testEndpoint() {
        console.log('Testando endpoint...');
        fetch('/Tarefa/TestStatus')
            .then(response => response.json())
            .then(data => {
                console.log('Teste do endpoint:', data);
                alert('Endpoint funcionando: ' + data.message);
            })
            .catch(error => {
                console.error('Erro no teste:', error);
                alert('Erro no teste: ' + error.message);
            });
    }

    // Remover classe drag-over quando sair da área
    document.addEventListener('dragleave', function(e) {
        if (e.target.classList.contains('card-body')) {
            e.target.classList.remove('drag-over');
        }
    });
</script>
