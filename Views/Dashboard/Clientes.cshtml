                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts do Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    let charts = {};

    // Carregar dados do dashboard de clientes
    async function loadClientesData() {
        try {
            // Carregar estatísticas gerais
            const statsResponse = await fetch('/Dashboard/GetEstatisticasGerais');
            const stats = await statsResponse.json();
            
            document.getElementById('totalClientes').textContent = stats.totalClientes || 0;
            
            // Calcular clientes deste mês
            const clientesPorMesResponse = await fetch('/Dashboard/GetClientesPorMes');
            const clientesPorMes = await clientesPorMesResponse.json();
            
            const mesAtual = new Date().toISOString().substring(0, 7);
            const clientesEsteMes = clientesPorMes.find(item => item.mes === mesAtual)?.total || 0;
            document.getElementById('clientesEsteMes').textContent = clientesEsteMes;
            
            // Calcular média mensal
            const totalMeses = clientesPorMes.length;
            const totalClientes = clientesPorMes.reduce((sum, item) => sum + item.total, 0);
            const mediaMensal = totalMeses > 0 ? Math.round(totalClientes / totalMeses) : 0;
            document.getElementById('mediaMensal').textContent = mediaMensal;
            
            // Calcular crescimento (comparar com mês anterior)
            const mesAnterior = new Date();
            mesAnterior.setMonth(mesAnterior.getMonth() - 1);
            const mesAnteriorStr = mesAnterior.toISOString().substring(0, 7);
            const clientesMesAnterior = clientesPorMes.find(item => item.mes === mesAnteriorStr)?.total || 0;
            const crescimento = clientesMesAnterior > 0 ? Math.round(((clientesEsteMes - clientesMesAnterior) / clientesMesAnterior) * 100) : 0;
            document.getElementById('crescimento').textContent = crescimento + '%';

            // Carregar gráficos
            await loadClientesPorMesChart();
            await loadEstadoCivilChart();
            await loadClientesRecentes();

        } catch (error) {
            console.error('Erro ao carregar dados de clientes:', error);
        }
    }

    // Gráfico de Clientes por Mês
    async function loadClientesPorMesChart() {
        try {
            const response = await fetch('/Dashboard/GetClientesPorMes');
            const data = await response.json();
            
            const ctx = document.getElementById('clientesPorMesChart').getContext('2d');
            
            if (charts.clientesPorMes) {
                charts.clientesPorMes.destroy();
            }
            
            charts.clientesPorMes = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(item => item.mes),
                    datasets: [{
                        label: 'Clientes Cadastrados',
                        data: data.map(item => item.total),
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.3,
                        pointBackgroundColor: '#4e73df',
                        pointBorderColor: '#4e73df',
                        pointRadius: 5,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        }
                    }
                }
            });
        } catch (error) {
            console.error('Erro ao carregar gráfico de clientes por mês:', error);
        }
    }

    // Gráfico de Estado Civil (simulado - você pode implementar endpoint específico)
    async function loadEstadoCivilChart() {
        try {
            // Simulando dados - implemente endpoint específico se necessário
            const data = [
                { estadoCivil: 'Solteiro', total: 45 },
                { estadoCivil: 'Casado', total: 35 },
                { estadoCivil: 'Divorciado', total: 15 },
                { estadoCivil: 'Viúvo', total: 5 }
            ];
            
            const ctx = document.getElementById('estadoCivilChart').getContext('2d');
            
            if (charts.estadoCivil) {
                charts.estadoCivil.destroy();
            }
            
            charts.estadoCivil = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: data.map(item => item.estadoCivil),
                    datasets: [{
                        data: data.map(item => item.total),
                        backgroundColor: ['#4e73df', '#1cc88a', '#f6c23e', '#e74a3b'],
                        hoverBackgroundColor: ['#2e59d9', '#17a673', '#dda20a', '#c0392b'],
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom'
                        }
                    }
                }
            });
        } catch (error) {
            console.error('Erro ao carregar gráfico de estado civil:', error);
        }
    }

    // Carregar Clientes Recentes
    async function loadClientesRecentes() {
        try {
            // Simulando dados - implemente endpoint específico
            const clientesRecentes = [
                { nome: 'João Silva', email: 'joao@email.com', telefone: '(11) 99999-9999', cidade: 'São Paulo', dataCadastro: '2025-09-28' },
                { nome: 'Maria Santos', email: 'maria@email.com', telefone: '(11) 88888-8888', cidade: 'Rio de Janeiro', dataCadastro: '2025-09-27' },
                { nome: 'Pedro Costa', email: 'pedro@email.com', telefone: '(11) 77777-7777', cidade: 'Belo Horizonte', dataCadastro: '2025-09-26' }
            ];
            
            const tbody = document.querySelector('#clientesRecentesTable tbody');
            tbody.innerHTML = '';
            
            clientesRecentes.forEach(cliente => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${cliente.nome}</td>
                    <td>${cliente.email}</td>
                    <td>${cliente.telefone}</td>
                    <td>${cliente.cidade}</td>
                    <td>${new Date(cliente.dataCadastro).toLocaleDateString('pt-BR')}</td>
                `;
                tbody.appendChild(row);
            });
        } catch (error) {
            console.error('Erro ao carregar clientes recentes:', error);
        }
    }

    // Função para atualizar dashboard
    function refreshClientes() {
        loadClientesData();
    }

    // Carregar dados quando a página carregar
    document.addEventListener('DOMContentLoaded', function() {
        loadClientesData();
    });
</script>

