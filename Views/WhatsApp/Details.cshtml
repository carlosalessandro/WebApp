@model WebApp.Models.WhatsAppIntegracao

@{
    ViewData["Title"] = "Detalhes da Configuração WhatsApp";
}

<div class="container-fluid">
    <h1 class="mt-4">Detalhes da Configuração WhatsApp</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Integração WhatsApp</a></li>
        <li class="breadcrumb-item active">Detalhes</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Informações da Configuração
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NumeroTelefone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NumeroTelefone)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BusinessAccountId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BusinessAccountId)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ativo)</dt>
                <dd class="col-sm-9">
                    @if (Model.Ativo)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inativo</span>
                    }
                </dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.WebhookUrl)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.WebhookUrl)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataCriacao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCriacao)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UltimaAtualizacao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UltimaAtualizacao)</dd>
            </dl>
            
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>