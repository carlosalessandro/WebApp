@section Scripts {
    <script>
        // Variáveis globais
        const vendaId = @Model.Id;
        let formaPagamentoSelecionada = '';
        let valorTotalVenda = @Model.ValorFinal;
        let clienteSelecionado = null;

        $(document).ready(function() {
            // Inicializar relógio
            atualizarRelogio();
            setInterval(atualizarRelogio, 1000);

            // Busca por código de barras (Enter)
            $('#codigo-barras').on('keypress', function(e) {
                if (e.which === 13) {
                    buscarProdutoPorCodigo();
                }
            });

            // Busca por código de barras (botão)
            $('#btn-buscar-codigo').click(function() {
                buscarProdutoPorCodigo();
            });

            // Filtrar produtos
            $('#filtro-produtos').on('input', function() {
                const filtro = $(this).val().toLowerCase();
                $('.produto-item').each(function() {
                    const nome = $(this).find('.card-title').text().toLowerCase();
                    $(this).toggle(nome.includes(filtro));
                });
            });

            // Clique em produto
            $(document).on('click', '.produto-card', function() {
                const produtoId = $(this).data('id');
                const quantidade = parseFloat($('#quantidade-rapida').val()) || 1;
                adicionarProdutoAoCarrinho(produtoId, quantidade);
            });

            // Controles de quantidade
            $(document).on('click', '.aumentar-qtd', function() {
                const itemId = $(this).data('item');
                alterarQuantidadeItem(itemId, 1);
            });

            $(document).on('click', '.diminuir-qtd', function() {
                const itemId = $(this).data('item');
                alterarQuantidadeItem(itemId, -1);
            });

            // Remover item
            $(document).on('click', '.remover-item', function() {
                const itemId = $(this).data('item');
                removerItemDoCarrinho(itemId);
            });

            // Aplicar desconto percentual
            $('#btn-aplicar-desconto-perc').click(function() {
                const percentual = parseFloat($('#desconto-percentual').val()) || 0;
                if (percentual > 0 && percentual <= 100) {
                    const valorDesconto = (valorTotalVenda * percentual) / 100;
                    aplicarDesconto(valorDesconto);
                }
            });

            // Aplicar desconto em valor
            $('#btn-aplicar-desconto-valor').click(function() {
                const valor = parseFloat($('#desconto-valor').val()) || 0;
                if (valor > 0) {
                    aplicarDesconto(valor);
                }
            });

            // Formas de pagamento
            $('.forma-pagamento').click(function() {
                $('.forma-pagamento').removeClass('btn-primary').addClass('btn-outline-primary');
                $(this).removeClass('btn-outline-primary').addClass('btn-primary');
                
                formaPagamentoSelecionada = $(this).data('forma');
                
                // Ocultar todas as seções de pagamento
                $('#pagamento-dinheiro, #pagamento-cartao, #pagamento-pix').hide();
                
                // Mostrar seção específica
                switch(formaPagamentoSelecionada) {
                    case 'dinheiro':
                        $('#pagamento-dinheiro').show();
                        $('#valor-recebido').focus();
                        break;
                    case 'cartao-debito':
                    case 'cartao-credito':
                        $('#pagamento-cartao').show();
                        break;
                    case 'pix':
                        $('#pagamento-pix').show();
                        gerarQRCodePIX();
                        break;
                }
                
                $('#btn-confirmar-pagamento').prop('disabled', false);
            });

            // Calcular troco
            $('#valor-recebido').on('input', function() {
                const valorRecebido = parseFloat($(this).val()) || 0;
                const troco = valorRecebido - valorTotalVenda;
                $('#valor-troco').text(troco >= 0 ? formatarMoeda(troco) : 'Valor insuficiente');
            });

            // Confirmar pagamento
            $('#btn-confirmar-pagamento').click(function() {
                confirmarPagamento();
            });

            // Cancelar venda
            $('#btn-cancelar-venda').click(function() {
                if (confirm('Tem certeza que deseja cancelar esta venda?')) {
                    cancelarVenda();
                }
            });

            // Buscar cliente
            $('#btn-buscar-cliente').click(function() {
                buscarCliente();
            });

            $('#cliente-busca').on('keypress', function(e) {
                if (e.which === 13) {
                    buscarCliente();
                }
            });
        });

        // Funções do PDV
        function atualizarRelogio() {
            const agora = new Date();
            const data = agora.toLocaleDateString('pt-BR');
            const hora = agora.toLocaleTimeString('pt-BR');
            
            $('#data-hora').text(data);
            $('#hora-atual').text(hora);
        }

        function buscarProdutoPorCodigo() {
            const codigo = $('#codigo-barras').val().trim();
            if (!codigo) return;

            // Simular busca por código de barras
            $.ajax({
                url: '@Url.Action("BuscarProdutoPorCodigo", "PDV")',
                method: 'GET',
                data: { codigo: codigo },
                success: function(produto) {
                    if (produto) {
                        const quantidade = parseFloat($('#quantidade-rapida').val()) || 1;
                        adicionarProdutoAoCarrinho(produto.id, quantidade);
                        $('#codigo-barras').val('').focus();
                    } else {
                        alert('Produto não encontrado!');
                        $('#codigo-barras').select();
                    }
                },
                error: function() {
                    alert('Erro ao buscar produto!');
                }
            });
        }

        function adicionarProdutoAoCarrinho(produtoId, quantidade) {
            $.ajax({
                url: '@Url.Action("AdicionarItem", "PDV")',
                method: 'POST',
                data: {
                    vendaId: vendaId,
                    produtoId: produtoId,
                    quantidade: quantidade
                },
                success: function(response) {
                    if (response.success) {
                        location.reload(); // Recarregar para atualizar o carrinho
                    } else {
                        alert('Erro ao adicionar produto: ' + response.message);
                    }
                },
                error: function() {
                    alert('Erro ao adicionar produto ao carrinho!');
                }
            });
        }

        function alterarQuantidadeItem(itemId, delta) {
            // Implementar alteração de quantidade via AJAX
            console.log('Alterar quantidade do item', itemId, 'em', delta);
        }

        function removerItemDoCarrinho(itemId) {
            if (confirm('Remover este item do carrinho?')) {
                $.ajax({
                    url: '@Url.Action("RemoverItem", "PDV")',
                    method: 'POST',
                    data: { itemId: itemId },
                    success: function() {
                        location.reload();
                    },
                    error: function() {
                        alert('Erro ao remover item!');
                    }
                });
            }
        }

        function aplicarDesconto(valor) {
            $.ajax({
                url: '@Url.Action("AplicarDesconto", "PDV")',
                method: 'POST',
                data: {
                    vendaId: vendaId,
                    desconto: valor
                },
                success: function() {
                    location.reload();
                },
                error: function() {
                    alert('Erro ao aplicar desconto!');
                }
            });
        }

        function buscarCliente() {
            const termo = $('#cliente-busca').val().trim();
            if (termo.length < 3) {
                alert('Digite pelo menos 3 caracteres');
                return;
            }

            $.ajax({
                url: '@Url.Action("BuscarClientes", "PDV")',
                method: 'GET',
                data: { termo: termo },
                success: function(clientes) {
                    if (clientes.length > 0) {
                        // Selecionar primeiro cliente encontrado
                        clienteSelecionado = clientes[0];
                        $('#cliente-nome').text(clienteSelecionado.nome);
                        $('#cliente-cpf').text(clienteSelecionado.cpf);
                        $('#cliente-selecionado').show();
                        $('#cliente-busca').val('');
                    } else {
                        alert('Cliente não encontrado!');
                    }
                },
                error: function() {
                    alert('Erro ao buscar cliente!');
                }
            });
        }

        function gerarQRCodePIX() {
            // Simular geração de QR Code PIX
            $('.qr-code-placeholder').html(`
                <div class="bg-dark text-white p-3">
                    <i class="bi bi-qr-code" style="font-size: 6rem;"></i>
                    <p class="mt-2">QR Code PIX</p>
                    <small>Valor: ${formatarMoeda(valorTotalVenda)}</small>
                </div>
            `);
        }

        function confirmarPagamento() {
            let dadosPagamento = {
                vendaId: vendaId,
                formaPagamento: formaPagamentoSelecionada,
                clienteId: clienteSelecionado ? clienteSelecionado.id : null
            };

            if (formaPagamentoSelecionada === 'dinheiro') {
                const valorRecebido = parseFloat($('#valor-recebido').val()) || 0;
                if (valorRecebido < valorTotalVenda) {
                    alert('Valor recebido é insuficiente!');
                    return;
                }
                dadosPagamento.valorRecebido = valorRecebido;
                dadosPagamento.troco = valorRecebido - valorTotalVenda;
            }

            if (formaPagamentoSelecionada.includes('cartao')) {
                dadosPagamento.parcelas = $('#parcelas-cartao').val();
            }

            // Finalizar venda
            $.ajax({
                url: '@Url.Action("FinalizarVenda", "PDV")',
                method: 'POST',
                data: dadosPagamento,
                success: function(response) {
                    if (response.success) {
                        $('#modalPagamento').modal('hide');
                        gerarCupomFiscal(dadosPagamento);
                    } else {
                        alert('Erro ao finalizar venda: ' + response.message);
                    }
                },
                error: function() {
                    alert('Erro ao processar pagamento!');
                }
            });
        }

        function gerarCupomFiscal(dadosPagamento) {
            // Preencher dados do cupom fiscal
            const agora = new Date();
            $('#cupom-data').text(agora.toLocaleString('pt-BR'));
            $('#cupom-numero').text(String(vendaId).padStart(6, '0'));
            
            // Preencher itens
            let itensHtml = '';
            @foreach (var item in Model.Itens)
            {
                <text>
                itensHtml += `
                    <tr>
                        <td>001 @item.Produto.Codigo @item.Produto.Nome</td>
                        <td class="text-end">@item.Quantidade.ToString("0.000")</td>
                        <td class="text-end">@item.PrecoUnitario.ToString("C")</td>
                        <td class="text-end">@item.Subtotal.ToString("C")</td>
                    </tr>
                `;
                </text>
            }
            $('#cupom-itens-lista').html(itensHtml);
            
            // Preencher totais
            $('#cupom-qtd-total').text('@Model.Itens.Sum(i => i.Quantidade).ToString("0.000")');
            $('#cupom-subtotal').text('@Model.ValorTotal.ToString("C")');
            $('#cupom-desconto-valor').text('@Model.Desconto.ToString("C")');
            $('#cupom-total-pagar').text('@Model.ValorFinal.ToString("C")');
            
            // Forma de pagamento
            const formaPagamentoTexto = {
                'dinheiro': 'DINHEIRO',
                'cartao-debito': 'CARTÃO DÉBITO',
                'cartao-credito': 'CARTÃO CRÉDITO',
                'pix': 'PIX'
            };
            
            $('#cupom-forma-pagamento').text(formaPagamentoTexto[formaPagamentoSelecionada] + ':');
            $('#cupom-valor-pago').text(formatarMoeda(dadosPagamento.valorRecebido || valorTotalVenda));
            
            if (dadosPagamento.troco && dadosPagamento.troco > 0) {
                $('#cupom-troco-linha').show();
                $('#cupom-troco-valor').text(formatarMoeda(dadosPagamento.troco));
            }
            
            // Mostrar cupom fiscal
            $('#modalCupomFiscal').modal('show');
        }

        function cancelarVenda() {
            window.location.href = '@Url.Action("Index", "PDV")';
        }

        function imprimirCupom() {
            const conteudo = document.getElementById('cupom-fiscal-conteudo').innerHTML;
            const janela = window.open('', '_blank');
            janela.document.write(`
                <html>
                <head>
                    <title>Cupom Fiscal</title>
                    <style>
                        body { font-family: monospace; font-size: 12px; margin: 0; padding: 20px; }
                        .cupom-fiscal { max-width: 300px; margin: 0 auto; }
                        table { width: 100%; border-collapse: collapse; }
                        th, td { padding: 2px; text-align: left; }
                        .text-end { text-align: right; }
                        .text-center { text-align: center; }
                        .fw-bold { font-weight: bold; }
                        hr { border: 1px solid #000; margin: 10px 0; }
                    </style>
                </head>
                <body>
                    <div class="cupom-fiscal">${conteudo}</div>
                </body>
                </html>
            `);
            janela.document.close();
            janela.print();
        }

        function enviarPorEmail() {
            const email = prompt('Digite o email para envio do cupom:');
            if (email) {
                alert('Cupom fiscal enviado para: ' + email);
                // Implementar envio por email
            }
        }

        function formatarMoeda(valor) {
            return new Intl.NumberFormat('pt-BR', {
                style: 'currency',
                currency: 'BRL'
            }).format(valor);
        }
    </script>
}

