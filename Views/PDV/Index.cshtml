@model WebApp.Models.Venda

@{
    ViewData["Title"] = "PDV Supermercado - Ponto de Venda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pdv-supermercado">
    <!-- Header do PDV -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body py-2">
                    <div class="row align-items-center">
                        <div class="col-md-3">
                            <h4 class="mb-0"><i class="bi bi-shop"></i> PDV Supermercado</h4>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <small>Caixa</small>
                                <div class="fw-bold">001</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <small>Operador</small>
                                <div class="fw-bold">Admin</div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <small id="data-hora"></small>
                                <div class="fw-bold" id="hora-atual"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Coluna da Esquerda - Produtos e Busca -->
        <div class="col-lg-7">
            <!-- Busca por Código de Barras -->
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group input-group-lg">
                                <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                                <input type="text" id="codigo-barras" class="form-control" 
                                       placeholder="Código de barras ou busca rápida" 
                                       autofocus autocomplete="off">
                                <button class="btn btn-primary" id="btn-buscar-codigo">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text">Qtd</span>
                                <input type="number" id="quantidade-rapida" class="form-control" 
                                       value="1" min="0.001" step="0.001">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Produtos em Grade -->
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h6 class="mb-0"><i class="bi bi-grid"></i> Produtos</h6>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group input-group-sm">
                                <input type="text" id="filtro-produtos" class="form-control" 
                                       placeholder="Filtrar produtos...">
                                <button class="btn btn-outline-secondary" id="btn-filtrar">
                                    <i class="bi bi-funnel"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filtro de Categorias -->
                    <div class="categorias-container mb-3">
                        <button class="btn btn-outline-primary categoria-btn active" data-categoria="0">Todos</button>
                        @foreach (var categoria in ViewBag.Categorias)
                        {
                            <button class="btn btn-outline-primary categoria-btn" data-categoria="@categoria.Id">@categoria.Nome</button>
                        }
                    </div>

                    <!-- Lista de Produtos -->
                    <div class="produtos-container" id="produtos-container">
                        <div class="row">
                            @foreach (var produto in ViewBag.Produtos)
                            {
                                <div class="col-md-3 mb-3 produto-item" data-categoria="@produto.CategoriaId">
                                    <div class="card h-100 produto-card" data-id="@produto.Id" data-nome="@produto.Nome" data-preco="@produto.Preco.ToString("F2")">
                                        <div class="card-img-top text-center pt-2">
                                            @if (produto.Imagens != null && produto.Imagens.Count > 0)
                                            {
                                                <img src="~/uploads/produtos/@produto.Imagens[0].NomeArquivo" alt="@produto.Nome" class="produto-img">
                                            }
                                            else
                                            {
                                                <img src="~/img/produto-sem-imagem.png" alt="Sem imagem" class="produto-img">
                                            }
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-title">@produto.Nome</h6>
                                            <p class="card-text text-success">R$ @produto.Preco.ToString("F2")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Coluna da Direita - Cupom Fiscal -->
        <div class="col-lg-5">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h6 class="mb-0"><i class="bi bi-receipt"></i> Cupom Fiscal</h6>
                        </div>
                        <div class="col-4 text-end">
                            <small>Venda #@Model.Id</small>
                        </div>
                    </div>
                </div>
                
                <!-- Informações do Cliente -->
                <div class="card-body p-2 border-bottom">
                    <div class="row g-2">
                        <div class="col-8">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input type="text" id="cliente-busca" class="form-control" 
                                       placeholder="CPF/Nome do cliente">
                                <button class="btn btn-outline-secondary" id="btn-buscar-cliente">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-4">
                            <button class="btn btn-outline-primary btn-sm w-100" id="btn-cliente-novo">
                                <i class="bi bi-person-plus"></i> Novo
                            </button>
                        </div>
                    </div>
                    <div id="cliente-selecionado" class="mt-2" style="display: none;">
                        <div class="alert alert-info alert-sm py-1 mb-0">
                            <small><strong id="cliente-nome"></strong> - CPF: <span id="cliente-cpf"></span></small>
                            <button type="button" class="btn-close btn-sm float-end" id="btn-remover-cliente"></button>
                        </div>
                    </div>
                </div>

                <!-- Lista de Itens do Cupom -->
                <div class="cupom-itens" style="height: 300px; overflow-y: auto;">
                    <table class="table table-sm mb-0">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th style="width: 40%;">Item</th>
                                <th style="width: 15%;" class="text-center">Qtd</th>
                                <th style="width: 20%;" class="text-end">Preço</th>
                                <th style="width: 20%;" class="text-end">Total</th>
                                <th style="width: 5%;"></th>
                            </tr>
                        </thead>
                        <tbody id="cupom-itens">
                            @foreach (var item in Model.Itens)
                            {
                                <tr class="item-cupom" data-item-id="@item.Id">
                                    <td>
                                        <div class="fw-bold">@item.Produto.Nome</div>
                                        <small class="text-muted">Cód: @item.Produto.Codigo</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="input-group input-group-sm">
                                            <button class="btn btn-outline-secondary btn-sm diminuir-qtd" data-item="@item.Id">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                            <input type="text" class="form-control text-center item-qtd" 
                                                   value="@item.Quantidade.ToString("0.000")" style="max-width: 60px;">
                                            <button class="btn btn-outline-secondary btn-sm aumentar-qtd" data-item="@item.Id">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td class="text-end">@item.PrecoUnitario.ToString("C")</td>
                                    <td class="text-end fw-bold">@item.Subtotal.ToString("C")</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-danger remover-item" data-item="@item.Id">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Totalizadores -->
                <div class="card-body p-2 border-top">
                    <div class="row g-1 mb-2">
                        <div class="col-6">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">Desc %</span>
                                <input type="number" id="desconto-percentual" class="form-control" 
                                       min="0" max="100" step="0.01" placeholder="0">
                                <button class="btn btn-outline-secondary" id="btn-aplicar-desconto-perc">
                                    <i class="bi bi-percent"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">Desc R$</span>
                                <input type="number" id="desconto-valor" class="form-control" 
                                       min="0" step="0.01" placeholder="0,00">
                                <button class="btn btn-outline-secondary" id="btn-aplicar-desconto-valor">
                                    <i class="bi bi-currency-dollar"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Resumo Financeiro -->
                    <div class="bg-light p-2 rounded">
                        <div class="row text-sm">
                            <div class="col-6">Qtd Itens:</div>
                            <div class="col-6 text-end" id="total-itens">@Model.Itens.Sum(i => i.Quantidade)</div>
                        </div>
                        <div class="row text-sm">
                            <div class="col-6">Subtotal:</div>
                            <div class="col-6 text-end" id="subtotal">@Model.ValorTotal.ToString("C")</div>
                        </div>
                        <div class="row text-sm text-success">
                            <div class="col-6">Desconto:</div>
                            <div class="col-6 text-end" id="desconto-total">-@Model.Desconto.ToString("C")</div>
                        </div>
                        <hr class="my-1">
                        <div class="row fw-bold fs-5 text-primary">
                            <div class="col-6">TOTAL:</div>
                            <div class="col-6 text-end" id="valor-total">@Model.ValorFinal.ToString("C")</div>
                        </div>
                    </div>
                </div>

                <!-- Botões de Ação -->
                <div class="card-footer p-2">
                    <div class="row g-2">
                        <div class="col-6">
                            <button class="btn btn-warning w-100" id="btn-cancelar-venda" 
                                    @(Model.Itens.Count == 0 ? "disabled" : "")>
                                <i class="bi bi-x-circle"></i> Cancelar
                            </button>
                        </div>
                        <div class="col-6">
                            <button class="btn btn-success w-100" id="btn-finalizar-venda" 
                                    @(Model.Itens.Count == 0 ? "disabled" : "")
                                    data-bs-toggle="modal" data-bs-target="#modalPagamento">
                                <i class="bi bi-check-circle"></i> Finalizar
                            </button>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Pagamento -->
<div class="modal fade" id="modalPagamento" tabindex="-1" aria-labelledby="modalPagamentoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="modalPagamentoLabel">
                    <i class="bi bi-credit-card"></i> Finalizar Pagamento
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Resumo da Venda -->
                    <div class="col-md-6">
                        <h6><i class="bi bi-receipt"></i> Resumo da Venda</h6>
                        <div class="card bg-light">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">Total de Itens:</div>
                                    <div class="col-6 text-end" id="resumo-itens">@Model.Itens.Count</div>
                                </div>
                                <div class="row">
                                    <div class="col-6">Subtotal:</div>
                                    <div class="col-6 text-end" id="resumo-subtotal">@Model.ValorTotal.ToString("C")</div>
                                </div>
                                <div class="row text-success">
                                    <div class="col-6">Desconto:</div>
                                    <div class="col-6 text-end" id="resumo-desconto">-@Model.Desconto.ToString("C")</div>
                                </div>
                                <hr>
                                <div class="row fw-bold fs-4 text-primary">
                                    <div class="col-6">TOTAL:</div>
                                    <div class="col-6 text-end" id="resumo-total">@Model.ValorFinal.ToString("C")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formas de Pagamento -->
                    <div class="col-md-6">
                        <h6><i class="bi bi-wallet2"></i> Forma de Pagamento</h6>
                        <div class="row g-2">
                            <div class="col-6">
                                <button type="button" class="btn btn-outline-primary w-100 forma-pagamento" data-forma="dinheiro">
                                    <i class="bi bi-cash-stack d-block fs-2"></i>
                                    <small>Dinheiro</small>
                                </button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-outline-primary w-100 forma-pagamento" data-forma="cartao-debito">
                                    <i class="bi bi-credit-card d-block fs-2"></i>
                                    <small>Cartão Débito</small>
                                </button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-outline-primary w-100 forma-pagamento" data-forma="cartao-credito">
                                    <i class="bi bi-credit-card-2-front d-block fs-2"></i>
                                    <small>Cartão Crédito</small>
                                </button>
                            </div>
                            <div class="col-6">
                                <button type="button" class="btn btn-outline-primary w-100 forma-pagamento" data-forma="pix">
                                    <i class="bi bi-qr-code d-block fs-2"></i>
                                    <small>PIX</small>
                                </button>
                            </div>
                        </div>

                        <!-- Pagamento em Dinheiro -->
                        <div id="pagamento-dinheiro" class="mt-3" style="display: none;">
                            <div class="card">
                                <div class="card-body">
                                    <h6>Pagamento em Dinheiro</h6>
                                    <div class="mb-3">
                                        <label class="form-label">Valor Recebido</label>
                                        <div class="input-group">
                                            <span class="input-group-text">R$</span>
                                            <input type="number" class="form-control" id="valor-recebido" 
                                                   step="0.01" min="0" placeholder="0,00">
                                        </div>
                                    </div>
                                    <div class="alert alert-info">
                                        <div class="row">
                                            <div class="col-6"><strong>Troco:</strong></div>
                                            <div class="col-6 text-end"><strong id="valor-troco">R$ 0,00</strong></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pagamento com Cartão -->
                        <div id="pagamento-cartao" class="mt-3" style="display: none;">
                            <div class="card">
                                <div class="card-body">
                                    <h6>Pagamento com Cartão</h6>
                                    <div class="mb-3">
                                        <label class="form-label">Parcelas</label>
                                        <select class="form-select" id="parcelas-cartao">
                                            <option value="1">À vista</option>
                                            <option value="2">2x sem juros</option>
                                            <option value="3">3x sem juros</option>
                                            <option value="4">4x sem juros</option>
                                            <option value="5">5x sem juros</option>
                                            <option value="6">6x sem juros</option>
                                        </select>
                                    </div>
                                    <div class="alert alert-warning">
                                        <i class="bi bi-exclamation-triangle"></i>
                                        Aguarde a confirmação da transação na máquina de cartão
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pagamento PIX -->
                        <div id="pagamento-pix" class="mt-3" style="display: none;">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h6>Pagamento via PIX</h6>
                                    <div class="qr-code-placeholder bg-light p-4 mb-3">
                                        <i class="bi bi-qr-code" style="font-size: 4rem;"></i>
                                        <p class="mt-2">QR Code será gerado aqui</p>
                                    </div>
                                    <div class="alert alert-info">
                                        <small>Escaneie o QR Code com o app do seu banco</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                <button type="button" class="btn btn-success" id="btn-confirmar-pagamento" disabled>
                    <i class="bi bi-check-circle"></i> Confirmar Pagamento
                </button>
            </div>
        </div>
    </div>
</div>

