@model IEnumerable<WebApp.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-box"></i> Produtos</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Novo Produto
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list"></i> Lista de Produtos</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="row">
                            @foreach (var produto in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="position-relative">
                                            @if (produto.Imagens.Any())
                                            {
                                                <img src="@produto.Imagens.First().Caminho" class="card-img-top" alt="@produto.Nome" style="height: 200px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                                </div>
                                            }
                                            @if (produto.Destaque)
                                            {
                                                <span class="position-absolute top-0 start-0 badge bg-warning text-dark m-2">
                                                    <i class="bi bi-star-fill"></i> Destaque
                                                </span>
                                            }
                                            @if (!produto.Ativo)
                                            {
                                                <span class="position-absolute top-0 end-0 badge bg-secondary m-2">
                                                    Inativo
                                                </span>
                                            }
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">@produto.Nome</h5>
                                            <p class="card-text text-muted small">
                                                @if (!string.IsNullOrEmpty(produto.Descricao))
                                                {
                                                    @(produto.Descricao.Length > 100 ? produto.Descricao.Substring(0, 100) + "..." : produto.Descricao)
                                                }
                                            </p>
                                            <div class="mt-auto">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <span class="h5 text-primary mb-0">@produto.Preco.ToString("C")</span>
                                                    <small class="text-muted">Estoque: @produto.QuantidadeEstoque</small>
                                                </div>
                                                @if (produto.Categoria != null)
                                                {
                                                    <span class="badge bg-info mb-2">@produto.Categoria.Nome</span>
                                                }
                                                @if (!string.IsNullOrEmpty(produto.Codigo))
                                                {
                                                    <small class="text-muted d-block">Código: @produto.Codigo</small>
                                                }
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="btn-group w-100" role="group">
                                                <a asp-action="Details" asp-route-id="@produto.Id" class="btn btn-outline-info btn-sm" title="Visualizar">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@produto.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form asp-action="ToggleStatus" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@produto.Id" />
                                                    <button type="submit" class="btn @(produto.Ativo ? "btn-outline-secondary" : "btn-outline-success") btn-sm" title="@(produto.Ativo ? "Desativar" : "Ativar")">
                                                        <i class="bi @(produto.Ativo ? "bi-pause" : "bi-play")"></i>
                                                    </button>
                                                </form>
                                                <a asp-action="Delete" asp-route-id="@produto.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-box display-1 text-muted"></i>
                            <h5 class="text-muted mt-3">Nenhum produto encontrado</h5>
                            <p class="text-muted">Crie o primeiro produto usando o botão acima.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
