                                <div class="h5 mb-0 font-weight-bold text-gray-800" id="crescimento">-%</div>
                            </div>
                            <div class="col-auto">
                                <i class="bi bi-trending-up fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráficos -->
        <div class="row">
            <!-- Gráfico de Clientes por Mês -->
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Evolução de Clientes por Mês</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="clientesPorMesChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gráfico de Distribuição por Estado Civil -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Distribuição por Estado Civil</h6>
