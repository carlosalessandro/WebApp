@model IEnumerable<WebApp.Models.UsuarioPermissao>
@{
    ViewData["Title"] = "Permissões de Usuários";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shield-check"></i> Permissões de Usuários</h2>
        <a asp-controller="User" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Gerenciar Usuários
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Lista de Permissões Concedidas
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Usuário</th>
                                <th>Categoria</th>
                                <th>Permissão</th>
                                <th>Status</th>
                                <th>Data de Concessão</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-person"></i> @item.Usuario?.Name
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Permissao?.Categoria?.Nome</span>
                                    </td>
                                    <td>@item.Permissao?.Nome</td>
                                    <td>
                                        @if (item.Concedida)
                                        {
                                            <span class="badge bg-success">Concedida</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Negada</span>
                                        }
                                    </td>
                                    <td>@item.DataConcessao.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Manage" asp-route-id="@item.UsuarioId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Nenhuma permissão foi concedida ainda.
            <a asp-controller="User" asp-action="Index" class="alert-link">Gerenciar permissões de usuários</a>.
        </div>
    }
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        if ($.fn.DataTable) {
            $('table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/pt-BR.json'
                },
                responsive: true,
                pageLength: 25,
                order: [[0, 'asc']]
            });
        }
    });
</script>
}
