@model IEnumerable<WebApp.Models.OrdemProducao>
@{
    ViewData["Title"] = "Dashboard PCP";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2"></i> Dashboard PCP</h2>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total de Ordens</h6>
                            <h2 class="mb-0">@ViewBag.TotalOrdens</h2>
                        </div>
                        <i class="bi bi-clipboard-data" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Em Andamento</h6>
                            <h2 class="mb-0">@ViewBag.OrdensEmAndamento</h2>
                        </div>
                        <i class="bi bi-hourglass-split" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Planejadas</h6>
                            <h2 class="mb-0">@ViewBag.OrdensPlanejadas</h2>
                        </div>
                        <i class="bi bi-calendar-check" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Concluídas</h6>
                            <h2 class="mb-0">@ViewBag.OrdensConcluidas</h2>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ordens Recentes -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Ordens de Produção Recentes</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Número</th>
                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th>Produzido</th>
                                <th>Status</th>
                                <th>Prioridade</th>
                                <th>Progresso</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ordem in Model)
                            {
                                var progresso = ordem.Quantidade > 0 ? (ordem.QuantidadeProduzida * 100 / ordem.Quantidade) : 0;
                                var statusClass = ordem.Status switch
                                {
                                    "Concluída" => "success",
                                    "EmAndamento" => "warning",
                                    "Pausada" => "secondary",
                                    "Cancelada" => "danger",
                                    _ => "info"
                                };

                                <tr>
                                    <td><strong>@ordem.NumeroOrdem</strong></td>
                                    <td>@ordem.Produto?.Nome</td>
                                    <td>@ordem.Quantidade</td>
                                    <td>@ordem.QuantidadeProduzida</td>
                                    <td><span class="badge bg-@statusClass">@ordem.Status</span></td>
                                    <td>
                                        @for (int i = 0; i < ordem.Prioridade; i++)
                                        {
                                            <i class="bi bi-star-fill text-warning"></i>
                                        }
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar bg-@statusClass" role="progressbar" 
                                                 style="width: @progresso%" 
                                                 aria-valuenow="@progresso" aria-valuemin="0" aria-valuemax="100">
                                                @progresso%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Nenhuma ordem de produção cadastrada ainda.
                </div>
            }
        </div>
    </div>
</div>
