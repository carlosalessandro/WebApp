@model IEnumerable<WebApp.Models.Venda>
@{
    ViewData["Title"] = "Relatório de Vendas";
    var totalVendas = ViewBag.TotalVendas as decimal? ?? 0;
    var quantidadeVendas = ViewBag.QuantidadeVendas as int? ?? 0;
    var ticketMedio = ViewBag.TicketMedio as decimal? ?? 0;
    var dataInicio = ViewBag.DataInicio as string ?? DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd");
    var dataFim = ViewBag.DataFim as string ?? DateTime.Today.ToString("yyyy-MM-dd");
    var vendasPorDia = ViewBag.VendasPorDia as List<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-graph-up me-2"></i>Relatório de Vendas</h2>
                <div>
                    <button class="btn btn-success" onclick="exportarExcel()">
                        <i class="bi bi-file-earmark-excel"></i> Excel
                    </button>
                    <button class="btn btn-danger" onclick="exportarPdf()">
                        <i class="bi bi-file-earmark-pdf"></i> PDF
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="dataInicio" class="form-label">Data Início</label>
                    <input type="date" class="form-control" id="dataInicio" name="dataInicio" value="@dataInicio">
                </div>
                <div class="col-md-4">
                    <label for="dataFim" class="form-label">Data Fim</label>
                    <input type="date" class="form-control" id="dataFim" name="dataFim" value="@dataFim">
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Filtrar
                        </button>
                        <a href="@Url.Action("Vendas")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Limpar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar text-success fs-1"></i>
                    <h4 class="card-title text-success">@totalVendas.ToString("C")</h4>
                    <p class="card-text">Total de Vendas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-cart-check text-primary fs-1"></i>
                    <h4 class="card-title text-primary">@quantidadeVendas</h4>
                    <p class="card-text">Quantidade de Vendas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="bi bi-calculator text-info fs-1"></i>
                    <h4 class="card-title text-info">@ticketMedio.ToString("C")</h4>
                    <p class="card-text">Ticket Médio</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-range text-warning fs-1"></i>
                    <h4 class="card-title text-warning">@((DateTime.Parse(dataFim) - DateTime.Parse(dataInicio)).Days + 1)</h4>
                    <p class="card-text">Dias no Período</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráfico de Vendas por Dia -->
    @if (vendasPorDia.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Vendas por Dia</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="vendasPorDiaChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Tabela de Vendas -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-table"></i> Detalhes das Vendas</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Data</th>
                                <th>Cliente</th>
                                <th>Valor Total</th>
                                <th>Desconto</th>
                                <th>Itens</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var venda in Model)
                            {
                                <tr>
                                    <td>@venda.DataVenda.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@(venda.Cliente?.Nome ?? "Cliente não informado")</td>
                                    <td class="text-end">@venda.ValorTotal.ToString("C")</td>
                                    <td class="text-end">@venda.Desconto.ToString("C")</td>
                                    <td class="text-center">@(venda.Itens?.Count ?? 0)</td>
                                    <td>
                                        @switch (venda.Status)
                                        {
                                            case "Finalizada":
                                                <span class="badge bg-success">Finalizada</span>
                                                break;
                                            case "Cancelada":
                                                <span class="badge bg-danger">Cancelada</span>
                                                break;
                                            case "Pendente":
                                                <span class="badge bg-warning">Pendente</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@venda.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Vendas", new { id = venda.Id })" 
                                           class="btn btn-sm btn-outline-primary" title="Ver detalhes">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <h5 class="text-muted mt-2">Nenhuma venda encontrada</h5>
                    <p class="text-muted">Não há vendas no período selecionado.</p>
                </div>
            }
        </div>
    </div>
</div>

@if (vendasPorDia.Any())
{
    <!-- Scripts do Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Dados do gráfico
        const vendasData = @Html.Raw(Json.Serialize(vendasPorDia));
        
        // Configurar gráfico
        const ctx = document.getElementById('vendasPorDiaChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: vendasData.map(v => new Date(v.data).toLocaleDateString('pt-BR')),
                datasets: [{
                    label: 'Valor Total (R$)',
                    data: vendasData.map(v => v.total),
                    borderColor: '#28a745',
                    backgroundColor: 'rgba(40, 167, 69, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'R$ ' + value.toLocaleString('pt-BR', {minimumFractionDigits: 2});
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const dataPoint = vendasData[context.dataIndex];
                                return [
                                    'Valor: R$ ' + dataPoint.total.toLocaleString('pt-BR', {minimumFractionDigits: 2}),
                                    'Quantidade: ' + dataPoint.quantidade + ' vendas'
                                ];
                            }
                        }
                    }
                }
            }
        });
    </script>
}

<script>
    function exportarExcel() {
        const params = new URLSearchParams(window.location.search);
        window.location.href = '@Url.Action("ExportarVendasExcel")?' + params.toString();
    }

    function exportarPdf() {
        const params = new URLSearchParams(window.location.search);
        window.location.href = '@Url.Action("ExportarVendasPdf")?' + params.toString();
    }
</script>
