@model WebApp.Models.ContaPagar
@{
    ViewData["Title"] = "Nova Conta a Pagar";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4><i class="bi bi-credit-card me-2"></i>Nova Conta a Pagar</h4>
        </div>
        <div class="card-body">
            <form asp-action="CriarContaPagar" method="post">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="NumeroDocumento" class="form-label"></label>
                        <input asp-for="NumeroDocumento" class="form-control" />
                        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 mb-3">
                        <label asp-for="Descricao" class="form-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="FornecedorId" class="form-label">Fornecedor</label>
                        <select asp-for="FornecedorId" class="form-select" asp-items='@(new SelectList(ViewBag.Fornecedores, "Id", "RazaoSocial"))'>
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="FornecedorId" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="CategoriaFinanceiraId" class="form-label">Categoria</label>
                        <select asp-for="CategoriaFinanceiraId" class="form-select" asp-items='@(new SelectList(ViewBag.Categorias, "Id", "Nome"))'>
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="CategoriaFinanceiraId" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="ContaBancariaId" class="form-label">Conta Banc√°ria (opcional)</label>
                        <select asp-for="ContaBancariaId" class="form-select" asp-items='@(new SelectList(ViewBag.ContasBancarias, "Id", "Nome"))'>
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="ContaBancariaId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label asp-for="ValorOriginal" class="form-label"></label>
                        <input asp-for="ValorOriginal" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="ValorOriginal" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="ValorDesconto" class="form-label"></label>
                        <input asp-for="ValorDesconto" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="ValorDesconto" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="ValorJuros" class="form-label"></label>
                        <input asp-for="ValorJuros" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="ValorJuros" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label asp-for="ValorMulta" class="form-label"></label>
                        <input asp-for="ValorMulta" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="ValorMulta" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DataEmissao" class="form-label"></label>
                        <input asp-for="DataEmissao" class="form-control" type="date" />
                        <span asp-validation-for="DataEmissao" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="DataVencimento" class="form-label"></label>
                        <input asp-for="DataVencimento" class="form-control" type="date" />
                        <span asp-validation-for="DataVencimento" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="1">Aberta</option>
                            <option value="2">Paga</option>
                            <option value="3">Cancelada</option>
                            <option value="4">Parcial</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Observacoes" class="form-label"></label>
                    <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save me-2"></i>Salvar
                    </button>
                    <a asp-action="ContasPagar" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
