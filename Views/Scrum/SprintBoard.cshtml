            <!-- Concluída -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-success h-100">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-check-circle"></i> Concluída
                            <span class="badge bg-light text-dark ms-2">
                                @Model.UserStories.Count(us => us.Status == WebApp.Models.StatusUserStory.Concluida)
                            </span>
                        </h6>
                    </div>
                    <div class="card-body p-2 kanban-column" 
                         data-status="@((int)WebApp.Models.StatusUserStory.Concluida)" 
                         ondrop="drop(event)" 
                         ondragover="allowDrop(event)">
                        @foreach (var story in Model.UserStories.Where(us => us.Status == WebApp.Models.StatusUserStory.Concluida))
