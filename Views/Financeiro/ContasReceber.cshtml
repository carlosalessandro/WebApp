@model IEnumerable<WebApp.Models.ContaReceber>
@{
    ViewData["Title"] = "Contas a Receber";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-cash-coin me-2"></i>Contas a Receber</h2>
                <a href="@Url.Action("CriarContaReceber")" class="btn btn-success">
                    <i class="bi bi-plus-circle me-2"></i>Nova Conta
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Documento</th>
                                        <th>Cliente</th>
                                        <th>Descrição</th>
                                        <th>Valor</th>
                                        <th>Vencimento</th>
                                        <th>Status</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var conta in Model)
                                    {
                                        <tr class="@(conta.Vencida ? "table-danger" : "")">
                                            <td>@conta.NumeroDocumento</td>
                                            <td>@(conta.Cliente?.Nome ?? "N/A")</td>
                                            <td>@conta.Descricao</td>
                                            <td>@conta.ValorTotal.ToString("C")</td>
                                            <td>
                                                @conta.DataVencimento.ToString("dd/MM/yyyy")
                                                @if (conta.Vencida)
                                                {
                                                    <span class="badge bg-danger ms-2">
                                                        @conta.DiasVencimento dias
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @switch (conta.Status)
                                                {
                                                    case WebApp.Models.StatusConta.Aberta:
                                                        <span class="badge bg-warning text-dark">Aberta</span>
                                                        break;
                                                    case WebApp.Models.StatusConta.Paga:
                                                        <span class="badge bg-success">Paga</span>
                                                        break;
                                                    case WebApp.Models.StatusConta.Cancelada:
                                                        <span class="badge bg-secondary">Cancelada</span>
                                                        break;
                                                    case WebApp.Models.StatusConta.Parcial:
                                                        <span class="badge bg-info text-dark">Parcial</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="verDetalhesReceber(@conta.Id)">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    @if (conta.Status == WebApp.Models.StatusConta.Aberta)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-success" onclick="receberConta(@conta.Id)">
                                                            <i class="bi bi-check-circle"></i>
                                                        </button>
                                                    }
                                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="editarContaReceber(@conta.Id)">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <h4 class="text-muted mt-3">Nenhuma conta a receber encontrada</h4>
                            <p class="text-muted">Clique no botão "Nova Conta" para adicionar uma conta a receber.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function verDetalhesReceber(id) {
            alert('Ver detalhes da conta a receber: ' + id);
        }

        function receberConta(id) {
            if (confirm('Confirma o recebimento desta conta?')) {
                alert('Recebimento registrado para conta: ' + id);
            }
        }

        function editarContaReceber(id) {
            alert('Editar conta a receber: ' + id);
        }
    </script>
}
