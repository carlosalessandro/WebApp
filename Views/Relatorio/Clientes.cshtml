@model IEnumerable<WebApp.Models.Cliente>

@{
    ViewData["Title"] = "Relatório de Clientes";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4><i class="bi bi-people"></i> Relatório de Clientes</h4>
                <div>
                    <a asp-action="ExportarExcel" class="btn btn-success btn-sm me-2">
                        <i class="bi bi-file-earmark-excel"></i> Excel
                    </a>
                    <a asp-action="ExportarPdf" class="btn btn-danger btn-sm me-2">
                        <i class="bi bi-file-earmark-pdf"></i> PDF
                    </a>
                    <a asp-action="ExportarCsv" class="btn btn-info btn-sm">
                        <i class="bi bi-file-earmark-text"></i> CSV
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Endereço</th>
                                <th>Bairro</th>
                                <th>Cidade</th>
                                <th>Estado Civil</th>
                                <th>Data Cadastro</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cliente in Model)
                            {
                                <tr>
                                    <td>@cliente.Id</td>
                                    <td>@cliente.Nome</td>
                                    <td>@cliente.CPF</td>
                                    <td>@cliente.Email</td>
                                    <td>@cliente.Telefone</td>
                                    <td>@cliente.Endereco</td>
                                    <td>@cliente.Bairro</td>
                                    <td>@cliente.Cidade</td>
                                    <td>@cliente.EstadoCivil</td>
                                    <td>@cliente.DataCadastro.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">Nenhum cliente encontrado</p>
                    </div>
                }
                else
                {
                    <div class="mt-3">
                        <p class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Total de clientes: <strong>@Model.Count()</strong>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar aos Relatórios
    </a>
</div>





