@model IEnumerable<WebApp.Models.MenuItem>

@{
    ViewData["Title"] = "Gerenciar Menu";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-menu-button-wide"></i> Gerenciar Menu</h2>
                <div>
                    <a asp-action="ClearCache" class="btn btn-info me-2" title="Limpar cache do menu para ver alterações">
                        <i class="bi bi-arrow-clockwise"></i> Limpar Cache
                    </a>
                    <a asp-action="ReorganizeByModules" class="btn btn-success me-2" title="Reorganizar menus por módulos">
                        <i class="bi bi-diagram-3"></i> Reorganizar
                    </a>
                    <a asp-action="Duplicates" class="btn btn-warning me-2">
                        <i class="bi bi-exclamation-triangle"></i> Ver Duplicatas
                    </a>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Novo Item
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["InfoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list"></i> Itens do Menu</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Título</th>
                                        <th>Ícone</th>
                                        <th>Controller</th>
                                        <th>Action</th>
                                        <th>Ordem</th>
                                        <th>Status</th>
                                        <th>Data Criação</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="@(item.Ativo ? "" : "table-secondary")">
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Icone))
                                                {
                                                    <i class="@item.Icone"></i>
                                                }
                                                @Html.DisplayFor(modelItem => item.Titulo)
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Icone)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Controller)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Action)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Ordem)</td>
                                            <td>
                                                @if (item.Ativo)
                                                {
                                                    <span class="badge bg-success">Ativo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inativo</span>
                                                }
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.DataCriacao)</td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Visualizar">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form asp-action="ToggleStatus" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn @(item.Ativo ? "btn-secondary" : "btn-success") btn-sm" title="@(item.Ativo ? "Desativar" : "Ativar")">
                                                            <i class="bi @(item.Ativo ? "bi-pause" : "bi-play")"></i>
                                                        </button>
                                                    </form>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Excluir">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h5 class="text-muted mt-3">Nenhum item do menu encontrado</h5>
                            <p class="text-muted">Crie o primeiro item do menu usando o botão acima.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
