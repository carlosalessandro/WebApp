@model WebApp.Models.Sprint
@{
    ViewData["Title"] = $"Sprint Board - {Model.Nome}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-kanban me-2"></i>Sprint Board</h2>
                    <h5 class="text-muted">@Model.Nome</h5>
                </div>
                <div>
                    <a href="@Url.Action("BurndownChart", new { id = Model.Id })" class="btn btn-outline-info">
                        <i class="bi bi-graph-down"></i> Burndown Chart
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações do Sprint -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="fw-bold text-primary fs-4">@Model.UserStories.Count</div>
                                <small class="text-muted">User Stories</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="fw-bold text-info fs-4">@Model.StoryPointsTotal</div>
                                <small class="text-muted">Story Points</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="fw-bold text-success fs-4">@Model.ProgressoPercentual%</div>
                                <small class="text-muted">Progresso</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="fw-bold text-warning fs-4">@Model.DiasRestantes</div>
                                <small class="text-muted">Dias Restantes</small>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Barra de Progresso -->
                    <div class="mt-3">
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.ProgressoPercentual%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Kanban Board -->
    <div class="sprint-board">
        <div class="row">
            <!-- Sprint Backlog -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-secondary h-100">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul"></i> Sprint Backlog
                            <span class="badge bg-light text-dark ms-2">
                                @Model.UserStories.Count(us => us.Status == WebApp.Models.StatusUserStory.SprintBacklog)
                            </span>
                        </h6>
                    </div>
                    <div class="card-body p-2 kanban-column" 
                         data-status="@((int)WebApp.Models.StatusUserStory.SprintBacklog)" 
                         ondrop="drop(event)" 
                         ondragover="allowDrop(event)">
                        @foreach (var story in Model.UserStories.Where(us => us.Status == WebApp.Models.StatusUserStory.SprintBacklog))
                        {
                            <div class="card mb-2 user-story-card" 
                                 draggable="true" 
                                 ondragstart="drag(event)" 
                                 data-story-id="@story.Id">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="card-title mb-0">@story.Titulo</h6>
                                        @if (story.StoryPoints.HasValue)
                                        {
                                            <span class="badge bg-primary rounded-pill">@story.StoryPoints</span>
                                        }
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(story.Descricao))
                                    {
                                        <p class="card-text small text-muted">
                                            @(story.Descricao.Length > 80 ? story.Descricao.Substring(0, 80) + "..." : story.Descricao)
                                        </p>
                                    }
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-@(story.Prioridade switch {
                                            WebApp.Models.PrioridadeUserStory.Critica => "danger",
                                            WebApp.Models.PrioridadeUserStory.Alta => "warning",
                                            WebApp.Models.PrioridadeUserStory.Media => "info",
                                            WebApp.Models.PrioridadeUserStory.Baixa => "success",
                                            _ => "secondary"
                                        })">
                                            @story.Prioridade
                                        </span>
                                        
                                        @if (!string.IsNullOrEmpty(story.Responsavel))
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-person"></i> @story.Responsavel
                                            </small>
                                        }
                                    </div>
                                    
                                    @if (story.Tasks.Any())
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">
                                                <i class="bi bi-check2-square"></i> 
                                                @story.TasksConcluidas/@story.TasksTotal tasks
                                            </small>
                                            <div class="progress mt-1" style="height: 4px;">
                                                <div class="progress-bar bg-info" style="width: @story.ProgressoPercentual%"></div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Em Desenvolvimento -->
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card border-warning h-100">
                    <div class="card-header bg-warning text-dark">
