@{
    ViewData["Title"] = "Dashboard ERP";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-success">Dashboard ERP</h2>
            <p class="text-muted">Visão geral do planejamento de recursos empresariais</p>
        </div>
    </div>

    <!-- KPIs Financeiros -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">R$ @ViewBag.TotalContasPagar.ToString("N2")</h4>
                            <p class="card-text">Contas a Pagar</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-arrow-up fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">R$ @ViewBag.TotalContasReceber.ToString("N2")</h4>
                            <p class="card-text">Contas a Receber</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-arrow-down fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">R$ @ViewBag.FluxoCaixaMes.ToString("N2")</h4>
                            <p class="card-text">Fluxo Caixa Mês</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.TaxaAprovacaoQualidade.ToString("F1")%</h4>
                            <p class="card-text">Taxa Aprovação</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs de Produção -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.OPsEmAndamento</h4>
                            <p class="card-text">OPs em Andamento</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-cogs fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.OPsAtrasadas</h4>
                            <p class="card-text">OPs Atrasadas</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.RecursosDisponiveis</h4>
                            <p class="card-text">Recursos Disponíveis</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@ViewBag.RecursosManutencao</h4>
                            <p class="card-text">Recursos em Manutenção</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tools fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Fluxo de Caixa - Últimos 30 Dias</h5>
                </div>
                <div class="card-body">
                    <canvas id="fluxoCaixaChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Produção por Status</h5>
                </div>
                <div class="card-body">
                    <canvas id="producaoStatusChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Ocupação de Recursos -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Ocupação de Recursos</h5>
                </div>
                <div class="card-body">
                    <canvas id="recursosChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Métricas de Produção</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 text-center">
                            <h3 class="text-primary">@ViewBag.ProdutividadeMedia.ToString("F2")</h3>
                            <p class="text-muted">Produtividade Média (unid/hora)</p>
                        </div>
                        <div class="col-6 text-center">
                            <h3 class="text-success">@ViewBag.TaxaAprovacaoQualidade.ToString("F1")%</h3>
                            <p class="text-muted">Taxa de Aprovação</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ações Rápidas -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Ações Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 mb-2">
                            <a href="@Url.Action("LancamentoCreate", "ERP")" class="btn btn-success btn-block">
                                <i class="fas fa-plus"></i> Lançamento
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="@Url.Action("LancamentosContabeis", "ERP")" class="btn btn-primary btn-block">
                                <i class="fas fa-book"></i> Contábil
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="@Url.Action("OrdemProducaoCreate", "ERP")" class="btn btn-info btn-block">
                                <i class="fas fa-cogs"></i> Nova OP
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="@Url.Action("OrdensProducao", "ERP")" class="btn btn-warning btn-block">
                                <i class="fas fa-list"></i> OPs
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="@Url.Action("RecursosProducao", "ERP")" class="btn btn-secondary btn-block">
                                <i class="fas fa-industry"></i> Recursos
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a href="@Url.Action("InspecoesQualidade", "ERP")" class="btn btn-dark btn-block">
                                <i class="fas fa-check"></i> Qualidade
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de Fluxo de Caixa
        fetch('/ERP/GetFluxoCaixaUltimos30Dias')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('fluxoCaixaChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.map(d => d.data),
                        datasets: [{
                            label: 'Entradas',
                            data: data.map(d => d.entradas),
                            borderColor: '#28a745',
                            backgroundColor: 'rgba(40, 167, 69, 0.1)',
                            tension: 0.4
                        }, {
                            label: 'Saídas',
                            data: data.map(d => d.saidas),
                            borderColor: '#dc3545',
                            backgroundColor: 'rgba(220, 53, 69, 0.1)',
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            });

        // Gráfico de Produção por Status
        fetch('/ERP/GetProducaoPorStatus')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('producaoStatusChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: data.map(d => d.status),
                        datasets: [{
                            data: data.map(d => d.quantidade),
                            backgroundColor: [
                                '#28a745',
                                '#ffc107',
                                '#17a2b8',
                                '#dc3545',
                                '#6f42c1',
                                '#fd7e14'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false
                    }
                });
            });

        // Gráfico de Ocupação de Recursos
        fetch('/ERP/GetOcupacaoRecursos')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('recursosChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.map(d => d.status),
                        datasets: [{
                            label: 'Quantidade',
                            data: data.map(d => d.quantidade),
                            backgroundColor: '#17a2b8'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            });
    </script>
}
